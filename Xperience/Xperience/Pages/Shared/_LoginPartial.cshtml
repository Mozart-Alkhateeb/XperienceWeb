@using Microsoft.AspNetCore.Identity
@using Xperience.Data.Entities.Users

@inject SignInManager<BaseUser> SignInManager
@inject UserManager<BaseUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-page="/Account/EditUser" title="Manage">@UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    </ul>
}


